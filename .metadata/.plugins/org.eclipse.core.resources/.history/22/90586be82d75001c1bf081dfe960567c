package accessmodifier;

public class Warrior {
  
	public int stranght;
	public int hp;
	public String name;
	public int lv;
	public int money;

	
	// 생성자를 만들어 주되, name만 사용자에게 입력받고
	// 나머지는 hp 20, str 3 , lv 1; money 0 을 
	// 자동으로 입력받도록 해 주세요.
	
	public Warrior(String n) {
     	stranght = 3;
     	hp = 20;
     	lv = 1;
     	money = 0;
     	name = n;
     	
     	// hunt(사냥하기) 메서드를 만들어보겠습니다.
     	// 이 메서드는 실행시 사냥을 하는 상황을 구현하며
     	// 체력이 2깍이고 돈을 10 획득합니다
     	// 사냥결과 체력이 ?가 되었고 소지금은 ?입니다 라고 출력합니다.
		
	}
	
	public void hunt (){
		hp -= 2;
		money +=10;
		System.out.println("사냥결과 : 체력이" + hp + "가 되었고" + "소지금은" + money + "입니다.");
		
	}
}
