package accessmodifier;

public class Commoner {
	// private 요소는 자식쪽에서도 조회나 수정이 불가능합니다.
	// 보안성이 제일 뛰어나기 때문에 private 을 쓰는게 권장되는데
	// 이 경우 setter, getter라는 메서드를 이용해 보조합니다.
	
	private int hp;
	private int mp;
	private int lv;
	private int exp;
	private String name;
	
	// 생성자를 이용해 이름은 사용자가 입력하도록 해 주시고
	// hp 20 mp 10 lv 1 exp 0을 기본값으로 넣어주세요
	
	public Commoner(String name) {
		hp =20;
		mp =10;
		lv= 1;
		exp =0;
		this.name = name;
	}

}
